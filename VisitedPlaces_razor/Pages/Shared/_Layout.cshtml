<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VisitedPlaces_razor</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VisitedPlaces_razor.styles.css" asp-append-version="true" />
    <!-- You MUST include jQuery before Fomantic -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/fomantic-ui@2.8.8/dist/semantic.min.css">
    <script src="https://cdn.jsdelivr.net/npm/fomantic-ui@2.8.8/dist/semantic.min.js"></script>

</head>

<body>
    <header>
        <div class="ui container">
                <div class="ui stackable menu">
@*                  <div class="item">
                    <img src="/images/logo.png">
                  </div>*@
                    <a class="item">
                        Home
                    </a>
                    <a class="item" asp-area="" asp-page="/Continents/IndexContinent" >
                        Continents
                    </a>
                    <a class="item" asp-area="" asp-page="/Countries/IndexCountries" >
                        Countries
                    </a>
                    <a class="item" asp-area="" asp-page="/Cities/IndexCities" >
                        Cities
                    </a>
                </div>
        </div>
    </header>
    <div class="ui container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="ui container">
        <footer class="ui container fixed bottom sticky footer segment">
                &copy; 2022 - VisitedPlaces_razor - a passion project by patriksvendsen
        </footer>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>