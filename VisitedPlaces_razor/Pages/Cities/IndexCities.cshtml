@page
@model VisitedPlaces_razor.Pages.Cities.IndexCitiesModel
@{
}

<div class="row pt-4">
    <div class="col-6">
        <h2 class="">All the cities I have visited</h2>
    </div>
    <div class="col-6">
        <a asp-page="createCity" class="btn btn-outline-success">
            Add a City
        </a>
    </div>
</div>

<div class="container-fluid vh-100 d-flex">
    <div class="col-sm col">
        <table id="myTable" class="table">
            <thead>
                <tr>
                    <th>                         
                        Name
                    </th>
                    <th>
                        Population
                    </th>
                    <th>
                        Belongs to Country
                    </th>
                    <th>
                        Lies in this region
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cities)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Population
                        </td>
                        <td>
                            @item.Country
                        </td>
                        <td>
                            @item.CountryRegion
                        </td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>